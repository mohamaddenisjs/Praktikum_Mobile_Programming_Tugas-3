<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip"
    tools:context="com.example.galih.belajarsharedpreference.MainActivity">
<!-- Label Nama -->
<TextView
    android:id="@+id/lblNama"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:singleLine="true"
    android:layout_marginTop="40dip"
    android:layout_marginBottom="10dip"/>
<!--Label Email -->
<TextView
    android:id="@+id/lblEmail"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:singleLine="true"
    android:layout_marginBottom="40dip"/>

    <!-- Nama Label -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:singleLine="true"
        android:layout_marginBottom="5dip"/>
    <!-- Nama input text -->
    <EditText android:id="@+id/txtNama"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"/>
    <!-- NIM Label -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="NIM"
        android:layout_marginBottom="5dip"/>
    <!-- Password input text -->
    <EditText android:id="@+id/txtNIM"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:singleLine="true"/>

    <!-- Submit button -->
    <Button android:id="@+id/btnSubmit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Submit"/>
<!-- Button untuk menampilkan data session -->
<Button android:id="@+id/btnLogout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Logout"/>
</LinearLayout>
